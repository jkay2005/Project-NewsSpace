    <!-- File: res/values/styles.xml -->
    <style name="App.BottomNavigationView.Text" parent="TextAppearance.AppCompat.Caption">
        <!-- Bạn có thể điều chỉnh kích thước chữ ở đây, 11sp hoặc 12sp là hợp lý -->
        <item name="android:textSize">12dp</item>
    </style>

    <!-- SỬA 2: Style tùy chỉnh cho BottomNavigationView để giải quyết vấn đề cân đối -->
    <style name="Widget.App.BottomNavigationView"
        parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconSize">22dp</item>
        <item name="itemTextAppearanceActive">@style/App.BottomNavigationView.Text</item>
        <item name="itemTextAppearanceInactive">@style/App.BottomNavigationView.Text</item>

        <!-- THUỘC TÍNH QUAN TRỌNG:
             Đặt lại padding để hệ thống tự cân chỉnh -->
        <item name="itemPaddingTop">4dp</item>
        <item name="itemPaddingBottom">4dp</item>
    </style>



