    <!-- Style cho tiêu đề tin tức LỚN (trong thẻ featured) -->
    <style name="TextAppearance.App.NewsTitle.Large" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_news_title_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <!-- Style cho tiêu đề tin tức NHỎ (trong thẻ standard) -->
    <style name="TextAppearance.App.NewsTitle.Small" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_size_news_title_small</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- ========================================================== -->
    <!-- == STYLE RIÊNG BIỆT CHỈ DÀNH CHO CHIP CÓ ICON           == -->
    <!-- ========================================================== -->
    <style name="Widget.App.IconOnlyChip" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Đặt màu nền thay đổi theo trạng thái (Xanh khi check, Xám nhạt khi không) -->
        <item name="chipBackgroundColor">@color/chip_background_selector_simple</item>
        <!-- TẮT HOÀN TOÀN VIỆC TÔ MÀU ICON -->
        <item name="chipIconTint">@null</item>
        <!-- (Tùy chọn) Bỏ viền cho chip icon -->
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <!-- ========================================================== -->
    <!-- == STYLE TÙY CHỈNH CHO BOTTOMAPPBAR VỚI CHIỀU CAO MỚI  == -->
    <!-- ========================================================== -->
    <style name="Widget.App.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <!--
            Ghi đè lại chiều cao tối thiểu của BottomAppBar.
            56dp là chiều cao tiêu chuẩn.
        -->
        <item name="android:minHeight">50dp</item>
    </style>
