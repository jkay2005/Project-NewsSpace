<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/nav_home"> <!-- Đặt điểm khởi đầu là nav_home -->

    <!-- Điểm đến: HomeFragment -->
    <fragment

        android:id="@+id/nav_home"
        android:name="course.examples.newsspace.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <!-- SỬA LỖI: Đổi ID thành tên đơn giản hơn để kích hoạt lại code generation -->
        <action
            android:id="@+id/action_homeFragment_to_categoryNewsFragment"
            app:destination="@id/categoryNewsFragment" />

        <!-- Sửa lại ID này để khớp với code Java đang gọi -->
        <action
            android:id="@+id/action_homeFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
        <action
            android:id="@+id/action_nav_home_to_nav_bookmark"
            app:destination="@id/nav_bookmark" />
    </fragment>
    <!-- ID này PHẢI TRÙNG với ID trong menu -->

    <!-- Điểm đến: ExploreFragment -->
    <fragment
        android:id="@+id/nav_explore"
        android:name="course.examples.newsspace.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_explore" >
        <action
            android:id="@+id/action_nav_explore_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
    </fragment>
    <!-- ID này PHẢI TRÙNG với ID trong menu -->

    <!-- Điểm đến: BookmarkFragment -->
    <fragment
        android:id="@+id/nav_bookmark"
        android:name="course.examples.newsspace.BookmarkFragment"
        android:label="fragment_bookmark"
        tools:layout="@layout/fragment_bookmark" >
        <action
            android:id="@+id/action_bookmarkFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
    </fragment>
    <!-- ID này PHẢI TRÙNG với ID trong menu -->

    <!-- Điểm đến: SettingsFragment -->
    <fragment
        android:id="@+id/nav_settings"
        android:name="course.examples.newsspace.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/categoryNewsFragment"
        android:name="course.examples.newsspace.CategoryNewsFragment"
        android:label="fragment_category_news"
        tools:layout="@layout/fragment_category_news" >
        <argument
            android:name="categoryName"
            app:argType="string" />
        <action
            android:id="@+id/action_categoryNewsFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/articleDetailFragment"
        android:name="course.examples.newsspace.ArticleDetailFragment"
        android:label="ArticleDetailFragment" >
        <argument
            android:name="articleId"
            app:argType="integer" />
    </fragment>
    <!-- ID này PHẢI TRÙNG với ID trong menu -->
</navigation>